@model ISPYZU.Models.User
@{
    ViewBag.Title = "Index";
}
<style>
    .error {
        color: red;
    }
</style>

<h2>Admin Login</h2>
@using (Html.BeginForm("Index", "Admin", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="form-group">
            <label>ID</label>
            @*instead of this-Input type text <input></input>*@
            @Html.ValidationMessageFor(x => x.UserName, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })

        </div>
        <div class="form-group">
            <label>Password</label>
            @*instead of this-Input type text <input></input>*@
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>

        </div>

    </div>
}

