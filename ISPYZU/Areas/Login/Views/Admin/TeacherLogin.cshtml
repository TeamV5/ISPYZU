@model ISPYZU.Models.Teacher
@{
    /**/

    ViewBag.Title = "Index";
}
<style>
    .error {
        color: red;
    }
</style>




<h2> Teacher Login </h2>




@using (Html.BeginForm("TeacherLogin", "Admin", FormMethod.Post))
{

    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="container">
        <div class="form-group">
            <label>Teacher ID</label>
            @*instead of this-Input type text <input></input>*@
            @Html.ValidationMessageFor(x => x.TeacherId, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.TeacherId, new { @class = "form-control" })


        </div>
        <div class="form-group">
            <label>Password</label>
            @*instead of this-Input type text <input></input>*@
            @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })

        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>

        </div>

    </div>
}
