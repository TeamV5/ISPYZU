@model IEnumerable<ISPYZU.Models.Majors>

@{
    ViewBag.Title = "Index";
}

<h2 class="text-center">Majors</h2>


<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MajorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Colleges.CollegeName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MajorName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MajorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Colleges.CollegeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MajorName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MajorId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MajorId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MajorId })
            </td>
        </tr>
    }

</table>
